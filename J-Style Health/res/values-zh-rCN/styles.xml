<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="loadingStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/yh_loading</item>
    </style>
    <style name="progressBarStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/progress_bar_default</item>
    </style>
    <style name="Text">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Parameter.clock_time.txt" parent="@style/Text">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:text">00:00</item>
    </style>
    <style name="Parameter.clock_weeks.txt" parent="@style/Text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="Text.Title_Button" parent="@style/Text">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Parameter.title.text" parent="@style/Text">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffbac2d5</item>
    </style>
    <style name="Text.Title" parent="@style/Text">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
