<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/date_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.1"
        android:background="@drawable/title_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/year_month_tab"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="2.0dip"
        android:layout_weight="0.9"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.16"
            android:orientation="vertical" >

            <com.YHJstyle.b005.b005.view.DateListView
                android:id="@id/data_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.0dip"
                android:cacheColorHint="@null"
                android:divider="@drawable/fengexian"
                android:dividerHeight="0.0dip"
                android:listSelector="@drawable/bg_date_list_unselected" />
        </LinearLayout>

        <ImageView
            android:id="@id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/date_line" />

        <LinearLayout
            android:id="@+id/sleep_view"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.84"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:text="@string/sleep_title_time"
                android:textSize="@dimen/date_left_week" />

            <RelativeLayout
                android:id="@+id/sleep_round_layout"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/sleep_round" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/sleep_data_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/sleep_accom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text="0.0h"
                    android:textColor="@color/sleep_text_black"
                    android:textSize="@dimen/date_left_date"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sleep_accom_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text="/0.0h"
                    android:textSize="@dimen/date_left_week" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:text="@string/sleep_title_quality"
                android:textSize="@dimen/date_left_week" />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/sleep_char_layout"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>